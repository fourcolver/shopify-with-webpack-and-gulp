			"type": "text",
			"id": "brand_img_3_alt",
			"label": "Image ALT Text"
		},
		{
			"type": "text",
			"id": "brand_title",
			"label": "Title",
			"default": "Redefining Pretty!"
		},
		{
			"type": "textarea",
			"id": "brand_text",
			"label": "Description"
		}
	]
}
{% endschema %}
