{% schema %}
{
	"name": "We Aim to Sparkle",
	"class": "about-aim",
	"settings": [
		{
			"type": "image_picker",
			"id": "brand_img",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "brand_img_alt",
			"label": "Image ALT Text"
